    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: NorthAPI Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/<relative-path-to-project-folder>NorthAPI.csproj"
        },
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/NorthAPI/bin/Debug/net8.0/NorthAPI.dll",
            "args": [],
            "cwd": "${workspaceFolder}/NorthAPI",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/NorthAPI"
            }
        }
    ]
}